{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Windows: Debug",
			"args": [
				"compilePath=${workspaceRoot}",
				"compileCommand=lime build windows -debug -DHXCPP_DEBUGGER",
				"runPath=${workspaceRoot}/export/windows/cpp/bin",
				"runCommand=IsoWorld.exe",
				"runInTerminal=false"
			],
			"type": "hxcpp",
			"request": "launch",
			"program": "",
			"stopOnEntry": false
		},
		
		{
			"name": "Windows: Build",
			"args": [
				"compilePath=${workspaceRoot}",
				"compileCommand=lime build windows -release",
				"runPath=${workspaceRoot}/export/windows/cpp/bin",
				"runCommand=IsoWorld.exe",				
				"runInTerminal=false"
			],
			"type": "hxcpp",
			"request": "launch",
			"program": "",
			"stopOnEntry": false
		}		

	]
}